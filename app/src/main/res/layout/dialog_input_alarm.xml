<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroud"
            >


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/medicinem" />

            <TextView
                android:id="@+id/doseidr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Type Your Doses"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/doseInput"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/doseidr"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custome_input_edt_text"
                android:gravity="center"
                android:hint="Dose"
                android:inputType="number"
                android:maxLength="1" />




            <androidx.cardview.widget.CardView
                android:id="@+id/cardreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/doseInput"

                app:cardCornerRadius="15dp">

                <Button
                    android:id="@+id/doseSave1"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:background="@drawable/button"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />

            </androidx.cardview.widget.CardView>









        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>