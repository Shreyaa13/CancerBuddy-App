<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_lay"
    tools:context=".Profile.ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_headerEditPr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/backgroud"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back_to_mainN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_24" />

            <ImageView
                android:id="@+id/PostP"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/edit" />

            <TextView
                android:id="@+id/scheme_new_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Pprofile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/card_headerEditPr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/profile" />


    <LinearLayout
        android:id="@+id/Pl1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_border2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Name :"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            android:hint="x  xxx xxx"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Pl2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pl1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_border2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="Cancer Type :"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/CancerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            android:hint="x  xxx xxx"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Pl3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pl2"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20dp"
        android:background="@drawable/custom_border2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nameMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="Mobile :"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PCountry"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:hint="xxx"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Pmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            android:hint="x  xxx xxx"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Pl4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pl3"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20dp"
        android:background="@drawable/custom_border2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nameGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="Gender :"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Pgender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            android:hint="x  xxx xxx"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Pl5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pl4"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20dp"
        android:background="@drawable/custom_border2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nameAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="Age :"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            android:hint="xx"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#0B0101"
            android:textStyle="bold" />

    </LinearLayout>


     


   


      









</RelativeLayout>