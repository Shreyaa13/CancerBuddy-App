<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_lay"
    tools:context=".Profile.ProfileUpdateActivity">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_headerEditP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/backgroud"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back_to_mainN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_24"/>



            <TextView
                android:id="@+id/scheme_new_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:text="Profile Update"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/card_headerEditP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile">

    </de.hdodenhof.circleimageview.CircleImageView>


    <EditText
        android:id="@+id/setup_fullname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/setup_profile"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custome_input_edt_text"
        android:ems="10"
        android:gravity="center"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />


    <EditText
        android:id="@+id/CancerDesc"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/setup_fullname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custome_input_edt_text"
        android:gravity="center"
        android:hint="Cancer Type"
        android:maxLength="50"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />


    <LinearLayout
        android:id="@+id/llM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/CancerDesc"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/CouId"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:maxLength="3"
            android:background="@drawable/custome_input_edt_text"
            android:ems="10"
            android:gravity="center"
            android:hint="+65"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/setup_mobile"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/llM1"
            android:layout_marginTop="10dp"
            android:background="@drawable/custome_input_edt_text"
            android:ems="10"
            android:gravity="center"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/llM1"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/Ageid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:maxLength="3"
            android:background="@drawable/custome_input_edt_text"
            android:ems="10"
            android:gravity="center"
            android:hint="Age."
            android:inputType="number"
            />

